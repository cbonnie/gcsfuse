[global]
ioengine=sync
direct=1
fadvise_hint=0
verify=0
bs=1M
fsync=1
rw=write
invalidate=1
ramp_time=10s
runtime=60s
time_based=1
nrfiles=1
thread=1 
openfiles=1
group_reporting=1
allrandrepeat=1
filename_format=$jobname.$jobnum.$filenum

[61_thread]
stonewall
directory=your-directory-name/10mb
filesize=10M
numjobs=1
